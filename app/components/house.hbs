<article class="house">
    {{#if @house.image}}
        <House::Image 
            src={{@house.image}}
            alt="A picture of {{@house.address}}"
        />
    {{/if}}
    <br>
    <div class="details">
        {{#if this.isHomeRoute}}
            <h3>
                <LinkTo @route="house" @model={{@house}}>
                    {{@house.address}}
                </LinkTo>
            </h3>
        {{/if}}
        <div class="detail address">
            <span>{{@house.address}}</span>
        </div>
        <div class="detail price">
            <span>${{@house.price}}</span>
        </div>
        <div class="detail location">
            <span>{{@house.location}}</span>
        </div>
        <div class="detail description">
            <span>{{@house.attributes.description}}</span>
        </div>
        <!--<StarHouse::StarHouse
            id={{@house.id}}
            value={{@house.favorite}}
        /> -->
        <Map
            @lat={{@house.lat}}
            @lng={{@house.lng}}
            @zoom="9"
            @width="100"
            @height="100"
            alt="A House Image of {{@house.address}}"
        />
        <h3>
            <a href={{@house.attributes.rdc_web_url}} target="_blank">Click Here to View the Listing</a>
        </h3>
    </div>
</article>