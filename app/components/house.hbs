<article class="house">
    <House::Image 
        src={{@house.image}}
        alt="A picture of {{@house.address}}"
    />
    <div class="details">
        <h3>
            <LinkTo @route="house" @model={{@house}}>
                {{@house.address}}
            </LinkTo>
        </h3>
        <div class="detail index">
            {{@house.index}}
        </div>
        <div class="detail address">
            <span>{{@house.address}}</span>
        </div>
        <div class="detail price">
            <span>{{@house.price}}</span>
        </div>
        <div class="detail location">
            <span>{{@house.location}}</span>
        </div>
        <div class="detail description">
            <span>{{@house.descripton}}</span>
        </div>
        <StarHouse::StarHouse
            id={{@house.id}}
            value={{@house.favorite}}
        />
        <Map
            @lat={{@house.lat}}
            @lng={{@house.lng}}
            @zoom="9"
            @width="100"
            @height="100"
            alt="A House Image of {{@house.address}}"
        />
        <h3>
            <LinkTo @route={{@house.url}}>Click Here to View the Listing</LinkTo>
        </h3>
    </div>
</article>