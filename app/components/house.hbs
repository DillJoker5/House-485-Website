<article class="house">
    {{#if @house.image}}
        <House::Image 
            src={{@house.image}}
            alt="A picture of {{@house.address}}"
        />
    {{/if}}
    <Map
            @lat={{@house.lat}}
            @lng={{@house.lng}}
            @zoom="9"
            @width="100"
            @height="100"
            alt="A House Image of {{@house.address}}"
        />
    <br>
    <div class="details">
        {{#if this.isHomeRoute}}
            <h3>
                <LinkTo @route="house" @model={{@house}}>
                    {{@house.address}}
                </LinkTo>
            </h3>
        {{/if}}
        <br>
        <div class="detail address">
            <li>
                <span>{{@house.address}}</span>
            </li>
        </div>
        <div class="detail price">
            <li>
                <span>Price: ${{@house.price}}</span>
            </li>
        </div>
        <div class="detail location">
            <li>
                <span>{{@house.location}}</span>
            </li>
        </div>
        <div class="detail description">
            <li>
                <span>{{@house.attributes.description}}</span>
            </li>
        </div>
        <br>
        <div>
            <h3>Bookmark: <StarHouse::StarHouse @id={{@house.id}}/></h3>
        </div>
        <br>
        <h3>
            <a href={{@house.attributes.rdc_web_url}} target="_blank">Click Here to View the Listing</a>
        </h3>
    </div>
</article>